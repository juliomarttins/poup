rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ----- FUNÇÕES HELPER -----
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // ----- REGRAS -----

    // Regra 1: Permite ao dono ler/escrever seu próprio doc de usuário
    // (Ex: /users/ID_DO_USUARIO)
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Regra 2: Permite ao dono ler/escrever em QUALQUER subcoleção
    // (Ex: /users/ID_DO_USUARIO/transactions/ID_DA_TRANSACAO)
    // Esta é a regra correta.
    match /users/{userId}/{collection}/{docId=**} {
       allow read, write: if isOwner(userId);
    }
  }
}