rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Função única para checar o dono
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Regra principal para o documento do usuário
    match /users/{userId} {
      // O usuário pode ler e escrever seus próprios dados (nome, email, etc.)
      allow read, write: if isOwner(userId);

      // Regra aninhada para TODAS as subcoleções (transactions, debts, etc.)
      // Isso permite 'get', 'list', 'create', 'update', 'delete'
      // dentro dessas subcoleções.
      match /{collection}/{docId=**} {
        allow read, write: if isOwner(userId);
      }
    }
  }
}